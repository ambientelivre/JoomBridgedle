    <description>Cria uma api entre o joomla e o moodle</description>
    <files>
        <filename plugin="APImoodle">APImoodle.php</filename>
    </files>
    <languages>
        <language tag="pt-br">pt-BR.plg_content_api.ini</language>
        <language tag="pt-br">pt-BR.plg_content_api.sys.ini</language>
    </languages>

<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="URL1"
				    type="text"
					default="sua URL"
					label="URL1"
					description="defina sua URL"
					maxlength="1024"
		            size="1024"
		        />


				<field
		            name="URL2"
			        type="text"	
				    default="sua URL"
			        label="URL2"
		            description="defina sua URL"
		            maxlength="1024"
		            size="1024"
	            />				
			</fieldset>
		</fields>
	</config>

    
</extension>
